.reports
  %table.table.table-hover
    %tbody
      %tr
        %th Summary
        %th Manager
        %th % Complete
        %th Hours
        %th Date
      - reports.each do |report|
        %tr
          %td= link_to report.summary, report_path({:id =>report.id, :options => options, :div => div}), :remote => true
          %td= link_to report.manager.name, employee_path({:id => report.manager.id, :options => options}), :remote => true
          %td= report.tasks_completion_percent
          %td= report.hours
          %td= report.date