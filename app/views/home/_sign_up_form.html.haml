%form.form-inline{"action" => "authenticate", "method"=> "post"}
  %p= link_to "Already a member?", '/login'
  .input-prepend.first
    %span.add-on
      %i.icon-envelope
    %input.span2{:type => "text", :name => "[user]email", :placeholder => "Email"}
  .input-prepend
    %span.add-on
      %i.icon-key
    %input.span2{:type => "text", :name => "[user]name", :placeholder => "Name"}
  .input-prepend
    %span.add-on
      %i.icon-key
    %input.span2{:type => "text", :name => "[user]company_name", :placeholder => "Company Id"}
  .input-prepend
    %span.add-on
      %i.icon-key
    %input.span2{:type => "password", :name => "[user]password", :placeholder => "Password"}
  %input{:style => "visibility: hidden;", :type => "submit"}