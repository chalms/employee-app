.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", projects_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_project_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", project_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.project.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @project.name
      %p
        %b
          = t("activerecord.attributes.project.start_date", :default => t("activerecord.labels.start_date", :default => "Start date"))
          \:
        = @project.start_date
      %p
        %b
          = t("activerecord.attributes.project.end_date", :default => t("activerecord.labels.end_date", :default => "End date"))
          \:
        = @project.end_date
      %p
        %b
          = t("activerecord.attributes.project.budget", :default => t("activerecord.labels.budget", :default => "Budget"))
          \:
        = @project.budget
      %p
        %b
          = t("activerecord.attributes.project.complete", :default => t("activerecord.labels.complete", :default => "Complete"))
          \:
        = @project.complete
      %p
        %b
          = t("activerecord.attributes.project.company_id", :default => t("activerecord.labels.company_id", :default => "Company"))
          \:
        = @project.company_id
      %p
        %b
          = t("activerecord.attributes.project.client_id", :default => t("activerecord.labels.client_id", :default => "Client"))
          \:
        = @project.client_id
      %p
        %b
          = t("activerecord.attributes.project.manager_number", :default => t("activerecord.labels.manager_number", :default => "Manager number"))
          \:
        = @project.manager_number
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_project_path(@project), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), project_path(@project), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
