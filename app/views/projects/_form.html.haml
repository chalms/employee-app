.group
  = f.label :name, :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Your project name
.group
  = f.label :start_date, :class => :label
  = f.date_select :start_date, :class => 'date_select'
  %span.description Start Date
.group
  = f.label :end_date, t("activerecord.attributes.project.end_date", :class => :label
  = f.date_select :end_date, :class => 'date_select'
  %span.description End Date
.group
  = f.label :budget, :class => :label
  = f.text_field :budget, :class => 'text_field'
  %span.description Budget
.group
  #client-select
    = select_tag(:client_id, @user.company.clients.map{ |c| [c.name, c.id]})
    %button.span{:onclick => 'createClient()'} Or Pick New Client
  #create-client{hidden: ""}
    = render(partial: 'clients/new', :locals => { :user => @user }
    %button.span{:onclick => 'selectClient()'} Or Select a current client
  %span.description Client
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), projects_path, :class => "text_button_padding link_button"

javascript:
  function createClient() {
    $('#create-client').show();
    $('#client-select').hide();
  }

  function selectClient() {
    $('#create-client').hide();
    $('#client-select').show();
  }