%table.table.table-hover
  %thead
    %h3= "#{name}: #{hours} hours"
    - if (options[:name])
      %br= " on #{options[:name]}"
  %tbody
    %tr.headers
      %th Report
      %th Checkin
      %th Checkout
      %th Hours
    - users_reports.each do |report|
      %td=link_to report.report.name, reports_path(report)
      %td=report.checkin
      %td=report.checkout
      %td=report.hours
  %tfooter
    %small=link_to name, employees_path(id)