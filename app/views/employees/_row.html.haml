- if (log)
  - if (log.email)
    - log_id = log.email ? log.email : nil
    - email = log.email ? log.email : nil
    - email_id = log_id ? "employee-log-email-#{log_id}" : nil
    - employee_number_id = log_id ? "employee-log-employee-number-#{log_id}" : nil
    - employee_role_id = log_id ? "employee-log-role-#{log_id}" : nil
    %td
      %h5{:id => email_id}= log.email
    %td
      %h5{:id => employee_number_id}= log.employee_number
    %td
      %h5{:id => employee_role_id}= log.role
    %td
      %h5= link_to "X", employee_log_path({id: log.id}), :method => 'delete', remote: true, :onclick => "destroyRow('#{log.id}');"
    :javascript
      makeAllEditable("#{log_id}");