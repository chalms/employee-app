.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", managers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_manager_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_manager_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Manager
    .inner
      = form_for @manager, :url => manager_path(@manager), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
