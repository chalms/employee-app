.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", managers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_manager_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", manager_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.manager.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @manager.name
      %p
        %b
          = t("activerecord.attributes.manager.email", :default => t("activerecord.labels.email", :default => "Email"))
          \:
        = @manager.email
      %p
        %b
          = t("activerecord.attributes.manager.employee_number", :default => t("activerecord.labels.employee_number", :default => "Employee number"))
          \:
        = @manager.employee_number
      %p
        %b
          = t("activerecord.attributes.manager.password", :default => t("activerecord.labels.password", :default => "Password"))
          \:
        = @manager.password
      %p
        %b
          = t("activerecord.attributes.manager.company_id", :default => t("activerecord.labels.company_id", :default => "Company"))
          \:
        = @manager.company_id
      %p
        %b
          = t("activerecord.attributes.manager.contact_id", :default => t("activerecord.labels.contact_id", :default => "Contact"))
          \:
        = @manager.contact_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_manager_path(@manager), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), manager_path(@manager), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
