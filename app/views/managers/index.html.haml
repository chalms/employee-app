.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", managers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_manager_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Managers
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.manager.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @managers.each do |manager|
          %tr{:class => cycle("odd", "even")}
            %td
              = manager.id
            %td
              = link_to manager.name, manager_path(manager)
            %td
              = manager.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", manager_path(manager)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_manager_path(manager)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", manager_path(manager), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
